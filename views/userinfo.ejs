<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <!-- Add this script tag to include Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f7f7f7;
        }

        .dashboard-container {
            max-width: 800px;
            margin: 50px auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            animation: fadeIn 1s ease-out;
            /* Fade in effect for the dashboard container */
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        h1 {
            color: #333;
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            animation: fadeIn 1s ease-out;
            /* Fade in effect for the table */
        }

        th,
        td {
            border: 1px solid #ddd;
            padding: 15px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
            font-weight: bold;
            color: #555;
        }

        .view-result-button {
            background-color: #4caf50;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
            /* Scale effect added */
        }

        .view-result-button:hover {
            background-color: #45a049;
            transform: scale(1.05);
            /* Scale up on hover */
        }

        tr:hover {
            background-color: #f5f5f5;
        }

        @keyframes fadeInRow {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        /* Fade in effect for table rows */

        tbody tr {
            animation: fadeInRow 0.6s ease-out;
        }

        .go-back-button {
            background-color: #3498db;
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            transition: background-color 0.3s ease, color 0.3s ease, transform 0.2s ease;
            
            /* Add margin to separate from the table */
            /* Gradient effect added */
            background-image: linear-gradient(45deg, #3498db, #2980b9);
            /* Box shadow added for depth */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            /* Scale effect added */
        }

        .go-back-button:hover {
            background-color: #2980b9;
            color: #fff;
            transform: scale(1.08);
            /* Scale up on hover */
            /* Box shadow increased for a stronger hover effect */
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
        }

        .go-back-button:active {
            /* Smooth transition to active state */
            transform: scale(0.95);
        }

        /* Add styling for charts */

        .charts-container {
            display: flex;
            justify-content: space-around;
            margin-top: 20px;
        }

        .doughnut-chart-container,
        .pie-chart-container {
            width: 45%;
        }

        canvas {
            max-width: 100%;
            height: auto;
        }
    </style>
</head>

<body>
    <div class="dashboard-container">
        <h1>User Information</h1>
        <!-- <label for="date">Select Date:</label>
        <input type="date" id="date" name="date"> -->
        <table>
            <thead>
                <tr>
                    <th>Fisrt Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Mobile Number</th>
                    <th>DATE</th>
                </tr>
            </thead>
            <tbody>
                <% userData.forEach(user=> { %>
                    <tr>
                        <td>
                            <%= user.first_name %>
                        </td>
                        <td>
                            <%= user.last_name %>
                        </td>
                        <td>
                            <%= user.email %>
                        </td>
                        <td>
                            <%= user.mobile_number %>
                        </td>
                        <td><a href="/info?userid=<%=user.user_id%>"><button class="view-result-button">View
                            Timing</button></a></td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
        <!-- Add placeholders for charts -->
        <div class="charts-container">
            <div class="doughnut-chart-container">
                <canvas id="doughnutChart"></canvas>
            </div>
            <div class="pie-chart-container">
                <canvas id="pieChart"></canvas>
            </div>
        </div>

        <p>
            <a href="/admin">
                <button class="go-back-button">Go Back</button>
            </a>
        </p>
    </div>
